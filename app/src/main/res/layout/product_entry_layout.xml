<!-- product_entry_layout.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/et_product_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Produkt: "
        android:textSize="16sp" />

    <EditText
        android:id="@+id/et_product_name"
        android:layout_width="200dp"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="Produktname" />

    <Spinner
        android:id="@+id/spinner_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/price_options" />
    <Spinner
        android:id="@+id/spinner_product_pfand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/price_options" />

</LinearLayout>
